<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PdaKeyUserMapper">

    <resultMap type="PdaKeyUser" id="PdaKeyUserResult">
        <result property="id"    column="id"    />
        <result property="keyId"    column="key_id"    />
        <result property="userId"    column="user_id"    />
        <result property="userName"    column="user_name"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPdaKeyUserVo">
        select id, key_id, user_id, user_name, create_by, create_time, update_by, update_time from pda_key_user
    </sql>

    <select id="selectPdaKeyUserById" parameterType="Long" resultMap="PdaKeyUserResult">
        <include refid="selectPdaKeyUserVo"/>
        where id = #{id}
    </select>

    <select id="selectPdaKeyUserList" parameterType="PdaKeyUser" resultMap="PdaKeyUserResult">
        <include refid="selectPdaKeyUserVo"/>
        <where>
            <if test="keyId != null">
                and key_id = #{keyId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="userName != null and userName != ''">
                and user_name like concat('%', #{userName}, '%')
            </if>
        </where>
    </select>

    <insert id="insertPdaKeyUser" parameterType="PdaKeyUser" useGeneratedKeys="true" keyProperty="id">
        insert into pda_key_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="keyId != null">key_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="userName != null and userName != ''">user_name,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="keyId != null">#{keyId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="userName != null and userName != ''">#{userName},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updatePdaKeyUser" parameterType="PdaKeyUser">
        update pda_key_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="keyId != null">key_id = #{keyId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="userName != null and userName != ''">user_name = #{userName},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePdaKeyUserById" parameterType="Long">
        delete from pda_key_user where id = #{id}
    </delete>

    <delete id="deletePdaKeyUserByIds" parameterType="String">
        delete from pda_key_user where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="selectPdaKeyUserByKeyIdAndUserId" resultMap="PdaKeyUserResult">
        <include refid="selectPdaKeyUserVo"/>
        where key_id = #{keyId} and user_id = #{userId}
        limit 1
    </select>

</mapper>